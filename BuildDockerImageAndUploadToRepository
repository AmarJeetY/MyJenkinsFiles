def imageRegistry = 'nexus.tools.digital.testcompany.co.uk:8881'

def imageName = "${imageRegistry}/your-tests"

def imageTag = null

def buildImage = null

def version = 'latest'

/* Checkout code from Gitlab / Github as specified in Jenkins pipeline*/

node {
    stage('Checkout') {
        deleteDir()
        checkout scm
    }
    
/* Build docker container and run powershell scripts inside container */

    stage('Build') {
        imageTag = "${imageName}:${version}"
        buildImage = docker.build(imageTag, " .")
    }
}
